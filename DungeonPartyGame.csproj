<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>

		<OutputType>Exe</OutputType>
		<RootNamespace>DungeonPartyGame</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- This project no longer uses MAUI; keep SkipValidate for historical reasons -->
		<SkipValidateMauiImplicitPackageReferences>true</SkipValidateMauiImplicitPackageReferences>

		<!-- Disable automatic assembly info generation to avoid duplicates -->
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>

		<!-- Display name -->
		<ApplicationTitle>DungeonPartyGame</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.dungeonpartygame</ApplicationId>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<!-- To develop, package, and publish an app to the Microsoft Store, see: https://aka.ms/MauiTemplateUnpackaged -->
		<WindowsPackageType>None</WindowsPackageType>

	</PropertyGroup>


	<ItemGroup>
		<ProjectReference Include="DungeonPartyGame.Core\DungeonPartyGame.Core.csproj" />
	</ItemGroup>

	<!-- Removed MAUI/Skia references (moving to pure MonoGame app) -->
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="10.0.0" />
	</ItemGroup>

	<!-- Exclude auto-generated AssemblyAttributes.cs files to prevent duplicate assembly attributes -->
	<ItemGroup>
		<Compile Remove="**\*.AssemblyAttributes.cs" />
	</ItemGroup>

	<!-- Exclude sub-project directories from main project build -->
	<ItemGroup>
		<Compile Remove="**/DungeonPartyGame.Tests/**" />
		<Compile Remove="**/DungeonPartyGame.Core/**" />
		<Compile Remove="**/DungeonPartyGame.UI/**" />
		<EmbeddedResource Remove="**/DungeonPartyGame.Tests/**" />
		<EmbeddedResource Remove="**/DungeonPartyGame.Core/**" />
		<EmbeddedResource Remove="**/DungeonPartyGame.UI/**" />
		<None Remove="**/DungeonPartyGame.Tests/**" />
		<None Remove="**/DungeonPartyGame.Core/**" />
		<None Remove="**/DungeonPartyGame.UI/**" />
		<MauiXaml Remove="**/DungeonPartyGame.UI/**" />
	</ItemGroup>

</Project>
