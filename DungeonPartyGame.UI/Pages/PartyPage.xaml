<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:DungeonPartyGame.UI.Converters"
    x:Class="DungeonPartyGame.UI.Pages.PartyPage">

    <ContentPage.Resources>
        <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Party Management" FontSize="24" HorizontalOptions="Center" />

        <Label Text="Current Party:" FontSize="18" />
        <CollectionView ItemsSource="{Binding PartyMembers}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedCharacter}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" BackgroundColor="LightGray">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Name}"
                               FontSize="16" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Role}"
                               FontSize="14" />

                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding Progression.Level, StringFormat='Level {0}'}"
                               FontSize="12" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Progression.UnspentSkillPoints, StringFormat='{0} SP'}"
                               FontSize="12" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Manage Selected Character"
                Command="{Binding ManageCharacterCommand}"
                IsEnabled="{Binding SelectedCharacter, Converter={StaticResource IsNotNullConverter}}" />

        <Button Text="Add New Character"
                Command="{Binding AddCharacterCommand}" />

        <Button Text="Back to Main"
                Command="{Binding NavigateBackCommand}" />
    </VerticalStackLayout>
</ContentPage>