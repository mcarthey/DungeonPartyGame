<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:DungeonPartyGame.UI.Controls"
    x:Class="DungeonPartyGame.UI.Pages.MainPage">

    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Dungeon Party Game" FontSize="24" HorizontalOptions="Center" />

        <!-- Navigation Buttons -->
        <Button Text="Party Management"
                Command="{Binding NavigateToPartyCommand}" />

        <!-- Combat Section -->
        <Label Text="Combat" FontSize="18" />
        <Button Text="Create Characters"
                Command="{Binding CreateCharactersCommand}" />
        <Button Text="Start New Combat"
                Command="{Binding StartNewCombatCommand}" />
        <Button Text="Next Round"
                Command="{Binding NextRoundCommand}" />

        <!-- Debug Section -->
        <Label Text="Debug" FontSize="18" />
        <Button Text="Grant XP (Debug)"
                Command="{Binding GrantXpCommand}" />

        <!-- Combat Animation Canvas -->
        <Frame BorderColor="Gray" Padding="0" HeightRequest="250">
            <controls:CombatCanvas x:Name="CombatCanvas" />
        </Frame>

        <ScrollView HeightRequest="200">
            <Label Text="{Binding CombatLog}"
                   FontFamily="Courier New"
                   LineBreakMode="WordWrap"
                   VerticalOptions="Start"
                   HorizontalOptions="Fill" />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
