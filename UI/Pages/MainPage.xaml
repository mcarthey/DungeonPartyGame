<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DungeonPartyGame.UI.Pages.MainPage">

    <VerticalStackLayout Padding="20" Spacing="16">
        <Button Text="Create Parties"
                Command="{Binding CreatePartiesCommand}" />
        <Button Text="Start New Battle"
                Command="{Binding StartNewCombatCommand}" />
        <Button Text="Next Turn"
                Command="{Binding NextTurnCommand}" />
        <ScrollView HeightRequest="400">
            <Label Text="{Binding CombatLog}"
                   FontFamily="Courier New"
                   LineBreakMode="WordWrap"
                   VerticalOptions="Start"
                   HorizontalOptions="Fill" />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
